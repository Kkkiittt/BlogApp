<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BlogApp.Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BlogApp.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark">
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="margin-left:10px">
		<a class="navbar-brand" asp-action="update" asp-controller="users">Account</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item active">
					<a class="nav-link" asp-action="all" asp-controller="articles" asp-route-page="1">Articles</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-action="create" asp-controller="articles">Create</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-action="search" asp-controller="articles">Search</a>
				</li>
			</ul>
		</div>
	</nav>
	<main role="main">
		@RenderBody()
	</main>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
